<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/statisticsScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/myLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/my_location"/>


                <EditText
                    android:id="@+id/originTXT"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:imeOptions="actionSearch"
                    android:ems="10"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColorHint="#F4F4F4"
                    android:textColor="#FAFAFA"
                    android:elevation="4dp"
                    android:textSize="14sp"
                    android:background="@drawable/textfield"
                    android:inputType="textPersonName"
                    android:hint="Origin" />

                <ImageButton
                    android:id="@+id/swap"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/arrow"/>

                <EditText
                    android:id="@+id/destinationTXT"
                    android:layout_width="130dp"
                    android:imeOptions="actionSearch"
                    android:layout_height="40dp"
                    android:elevation="4dp"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginRight="40dp"
                    android:textColor="#FAFAFA"
                    android:textColorHint="#F4F4F4"
                    android:ems="10"
                    android:background="@drawable/textfield"
                    android:inputType="textPersonName"
                    android:hint="Destination" />
            </LinearLayout>

            <fragment
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="250dp"
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                >
                <ImageView android:id="@+id/ivMapTransparent" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@android:color/transparent" />
            </fragment>

            <TextView
                android:id="@+id/totalKM"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Total KM: 0"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:layout_marginLeft="53dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="To divide between: "/>

            <EditText
                android:id="@+id/totalPassengers"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="40dp"
                android:hint="Total passengers"
                android:inputType="numberDecimal"/>

            <Switch
                android:id="@+id/tollSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompatTheme"
                android:text="Include tolls: "
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                />

            <LinearLayout
                android:id="@+id/tolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/totalTollCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Total toll cost: 0.0â‚¬"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="53dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Choose what tolls to include in total"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tollRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">
        <Button
            android:id="@+id/calculate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Calculate"
            android:layout_marginBottom="80dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:background="@drawable/roundedxml"
            android:textColor="#FFFF"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#959595"
            android:textSize="15sp"
            android:text="Please use euros as units"/>
    </RelativeLayout>

</FrameLayout>
