<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:text="Total: 0.00â‚¬ x Pers"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:layout_marginLeft="80dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:text="Total KM:"/>

            <EditText
                android:id="@+id/totalKM"
                android:layout_marginLeft="80dp"
                android:layout_width="250dp"
                android:hint="Total km"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorPrimary" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:layout_marginLeft="80dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="To divide between: "/>

            <EditText
                android:id="@+id/totalPassengers"
                android:layout_marginLeft="80dp"
                android:layout_width="250dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="40dp"
                android:hint="Total passengers"
                android:inputType="numberDecimal"/>

            <Switch
                android:id="@+id/tollSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompatTheme"
                android:text="Tolls: "
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:id="@+id/tolls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="80dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Toll Total: "/>

                <EditText
                    android:id="@+id/tollCost"
                    android:layout_marginLeft="80dp"
                    android:layout_width="250dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="40dp"
                    android:hint="Total toll costs"
                    android:inputType="numberDecimal"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">
        <Button
            android:id="@+id/calculate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Calculate"
            android:layout_marginBottom="80dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:background="@drawable/roundedxml"
            android:textColor="#FFFF"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#959595"
            android:textSize="15sp"
            android:text="Please use euros as units"/>
    </RelativeLayout>

</FrameLayout>
